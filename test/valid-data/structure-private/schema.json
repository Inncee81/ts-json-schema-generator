                        "subfieldB",
                        "subfieldC"
                    ],
                    "properties": {
                        "subfieldA": {
                            "type": "number"
                        },
                        "subfieldB": {
                            "type": [
                                "string",
                                "number"
                            ]
                        },
                        "subfieldC": {
                            "type": "object",
                            "required": [
                                "subsubfieldA"
                            ],
                            "properties": {
                                "subsubfieldA": {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    }
