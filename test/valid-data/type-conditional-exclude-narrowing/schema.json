{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/MyObject",
    "definitions": {
        "MyObject": {
            "type": "object",
            "required": [
                "textWithoutAlign",
                "textWithoutNumbers",
                "allPrims",
                "goodPrims",
                "badPrims",
                "stringOrNull"
            ],
            "properties": {
                "textWithoutAlign": {
                    "type": "object",
                    "properties": {
                        "align": {
                            "type": "number"
                        }
                    },
                    "additionalProperties": false
                },
                "textWithoutNumbers": {
                    "type": "object",
                    "properties": {
                        "align": {
                            "$ref": "#/definitions/Align"
                        }
                    },
                    "additionalProperties": false
                },
                "allPrims": {
                    "$ref": "#/definitions/Primitives"
                },
                "goodPrims": {
                    "$ref": "#/definitions/GoodPrimitives"
                },
                "badPrims": {
                    "$ref": "#/definitions/BadPrimitives"
                },
                "stringOrNull": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "additionalProperties": false
        },
        "Align": {
            "type": "string",
            "enum": [
                "left",
                "right",
                "center"
            ]
        },
        "Primitives": {
            "anyOf": [
                {
                    "$ref": "#/definitions/GoodPrimitives"
                },
                {
                    "$ref": "#/definitions/BadPrimitives"
                }
            ]
        },
        "GoodPrimitives": {
            "type": [
                "string",
                "number"
            ]
        },
        "BadPrimitives": {
            "type": [
                "null",
                "boolean"
            ]
        }
    }
}
