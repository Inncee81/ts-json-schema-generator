    "$ref": "#/definitions/MyObject",
    "definitions": {
        "MyObject": {
            "type": "object",
            "required": [
                "primitive",
                "object"
            ],
            "properties": {
                "primitive": {
                    "$ref": "#/definitions/MyString"
                },
                "object": {
                    "$ref": "#/definitions/MySubObject"
                }
            },
            "additionalProperties": false
        },
        "MyString": {
            "type": "string"
        },
        "MySubObject": {
            "type": "object",
            "required": [
                "propA",
                "propB"
            ],
            "properties": {
                "propA": {
                    "type": "number"
                },
                "propB": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    }
}
