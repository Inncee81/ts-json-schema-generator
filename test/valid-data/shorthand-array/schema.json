{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/MyType",
    "definitions": {
        "MyType": {
            "type": "object",
            "required": [
                "numberArray",
                "stringArray"
            ],
            "properties": {
                "numberArray": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "stringArray": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
