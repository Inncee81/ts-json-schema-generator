{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Shape",
    "definitions": {
        "Shape": {
            "anyOf": [
                {
                    "$ref": "#/definitions/Square"
                },
                {
                    "$ref": "#/definitions/Rectangle"
                },
                {
                    "$ref": "#/definitions/Circle"
                }
            ]
        },
        "Square": {
            "type": "object",
            "required": [
                "kind",
                "size"
            ],
            "properties": {
                "kind": {
                    "type": "string",
                    "const": "square"
                },
                "size": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "Rectangle": {
            "type": "object",
            "required": [
                "kind",
                "width",
                "height"
            ],
            "properties": {
                "kind": {
                    "type": "string",
                    "const": "rectangle"
                },
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "Circle": {
            "type": "object",
            "required": [
                "kind",
                "radius"
            ],
            "properties": {
                "kind": {
                    "type": "string",
                    "const": "circle"
                },
                "radius": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    }
}
